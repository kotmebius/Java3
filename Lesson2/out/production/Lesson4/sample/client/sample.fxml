<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="body" alignment="center" style="-fx-font-size: 16px;" styleClass="lightBody"
      xmlns="http://javafx.com/javafx/8.0.281" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.client.Controller">
    <fx:define>
        <ToggleGroup fx:id="themeToggle"/>
        <ToggleGroup fx:id="fontSizeToggle"/>
    </fx:define>
    <MenuBar styleClass="lightMenu" fx:id="menu">
        <menus>
            <Menu mnemonicParsing="false" text="Тема">
                <items>
                    <RadioMenuItem toggleGroup="$themeToggle" fx:id="lightTheme" onAction="#setLightTheme"
                                   text="Светлая тема" selected="true"/>
                    <RadioMenuItem toggleGroup="$themeToggle" fx:id="darkTheme" onAction="#setDarkTheme"
                                   text="Тёмная тема"/>
                    <RadioMenuItem toggleGroup="$themeToggle" fx:id="brightTheme" onAction="#setBrightTheme"
                                   text="Яркая тема"/>
                </items>
            </Menu>
            <Menu fx:id="fontMenu" text="Шрифт">
                <items>
                    <RadioMenuItem toggleGroup="$fontSizeToggle" fx:id="fontMinus2" onAction="#setFontMinus2"
                                   text="-2"/>
                    <RadioMenuItem toggleGroup="$fontSizeToggle" fx:id="fontMinus1" onAction="#setFontMinus1"
                                   text="-1"/>
                    <RadioMenuItem toggleGroup="$fontSizeToggle" fx:id="fontNormal" onAction="#setFontNormal" text="0"
                                   selected="true"/>
                    <RadioMenuItem toggleGroup="$fontSizeToggle" fx:id="fontPlus1" onAction="#setFontPlus1" text="+1"/>
                    <RadioMenuItem toggleGroup="$fontSizeToggle" fx:id="fontPlus2" onAction="#setFontPlus2" text="+2"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <HBox fx:id="upperPanel">
        <TextField HBox.hgrow="ALWAYS" promptText="Логин" fx:id="loginField"/>
        <PasswordField promptText="Пароль" fx:id="passwordField" onAction="#tryToAuth"/>
        <Button text="Авторизоваться" onAction="#tryToAuth"/>
    </HBox>
    <HBox VBox.vgrow="ALWAYS">
        <VBox HBox.hgrow="ALWAYS">
            <TextArea fx:id="mainTextArea" style="-fx-font-family: Consolas;" styleClass="lightTextArea"
                      VBox.vgrow="ALWAYS" editable="false"/>
            <HBox fx:id="bottomPanel" managed="false" visible="false">
                <TextField fx:id="inputText" onAction="#sendMsg" styleClass="lightInputText" HBox.hgrow="ALWAYS"
                           VBox.vgrow="ALWAYS"/>
                <Button fx:id="sendMsgButton" onAction="#sendMsg" styleClass="lightButton" text="Send Message"/>
            </HBox>
        </VBox>
        <ListView fx:id="clientsList" prefWidth="200" managed="false" visible="false"/>
        <!--                  onMouseClicked="#selectClient"-->
        <!--                  prefWidth="200" />-->
    </HBox>
</VBox>
